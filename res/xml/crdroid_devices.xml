<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/device_maintainers_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference
        style="?android:preferenceInformationStyle"
        android:title="@string/device_maintainers_title"
        android:summary="@string/device_maintainers_title_summary"
        android:selectable="false" />

        <PreferenceCategory
             android:key="device_category_google"
             android:title="@string/device_category_google_title" >

             <Preference
                 android:key="device_google_n4"
                 android:icon="@drawable/minimal_mako"
                 android:title="@string/device_google_n4"
                 android:summary="@string/device_google_n4_summary"
                 android:selectable="false" />

             <Preference
                 android:key="device_google_n5"
                 android:icon="@drawable/minimal_hammerhead"
                 android:title="@string/device_google_n5"
                 android:summary="@string/device_google_n5_summary"
                 android:selectable="false" />

             <Preference
                 android:key="device_google_n6"
                 android:icon="@drawable/minimal_shamu"
                 android:title="@string/device_google_n6"
                 android:summary="@string/device_google_n6_summary"
                 android:selectable="false" />

        </PreferenceCategory>

        <PreferenceCategory
             android:key="device_category_oneplus"
             android:title="@string/device_category_oneplus_title" >

             <Preference
                 android:key="device_oneplus_one"
                 android:icon="@drawable/minimal_bacon"
                 android:title="@string/device_oneplus_one"
                 android:summary="@string/device_oneplus_one_summary"
                 android:selectable="false" />

        </PreferenceCategory>
</PreferenceScreen> 
